<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarGame.Pages.HowToPage"
             BackgroundColor="Black"
             Shell.NavBarIsVisible="False">

    <Grid>

        <Image Source="backgroundgarage.jpg" Aspect="AspectFill" />

        <BoxView Color="#66000000" />

        <Grid Padding="24" RowDefinitions="Auto,*,Auto" RowSpacing="18">

        <Label Grid.Row="0"
               Text="How to Play"
               TextColor="White"
               FontSize="28"
               HorizontalOptions="Center" />

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="14" HorizontalOptions="Center">
                    <Image Source="howtoplay.png" Aspect="AspectFit" HeightRequest="320" />

                </VerticalStackLayout>
        </ScrollView>

        <Button Grid.Row="2"
                Text="Back"
                Clicked="Back_Clicked"
                HorizontalOptions="Center"
                WidthRequest="220" />

        </Grid>

    </Grid>
</ContentPage>
